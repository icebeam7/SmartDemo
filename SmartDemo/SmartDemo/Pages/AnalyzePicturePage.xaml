<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDemo.Pages.AnalyzePicturePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Margin="15">
            <Label Text="Picture Analysis" TextColor="Black" FontSize="Large" Margin="15"/>
            <Image x:Name="image" WidthRequest="400" HeightRequest="400" HorizontalOptions="Center" Margin="15" />
            <ActivityIndicator x:Name="indicator" Color="Green" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Label x:Name="DescriptionLabel" Text="---" />
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SelectButton" Text="Select" Order="Primary" Priority="0" Clicked="SelectButton_Clicked"/>
        <ToolbarItem x:Name="AnalyzeButton" Text="Analyze" Order="Primary" Priority="0" Clicked="AnalyzeButton_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>